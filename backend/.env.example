# Copy this file to .env and fill in real values. Do NOT commit secrets.

# MongoDB connection string (replace <user>, <pass>, <cluster>)
MONGO_URI=mongodb+srv://<user>:<pass>@cluster.mongodb.net/?authSource=admin

# Frontend URL allowed by CORS / socket.io
FRONTEND_URL=http://localhost:5173

# Server port
PORT=3000

# JSON Web Token secret and expiry
JWT_SECRET=change_me_to_a_long_random_string
JWT_EXPIRES_IN=7d

# Optional:
# NODE_ENV=development
